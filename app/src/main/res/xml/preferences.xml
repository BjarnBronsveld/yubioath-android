<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="hideThumbnail"
        android:summary="@string/hide_thumbnail_description"
        android:title="@string/hide_thumbnail_title" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="warnNfc"
        android:summary="@string/warn_nfc_description"
        android:title="@string/warn_nfc_title" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="useNfcReaderMode"
        android:summary="@string/use_nfc_reader_mode_description"
        android:title="@string/use_nfc_reader_mode_title" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="readNdefData"
        android:summary="@string/read_ndef_data_description"
        android:title="@string/read_ndef_data_title" />

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/defaultKeyboard"
        android:entryValues="@array/defaultKeyboard"
        android:key="keyboardLayout"
        android:title="@string/keyboard_layout_title" />

    <Preference
        android:key="clearIcons"
        android:title="@string/clear_icons_action" />

    <Preference
        android:key="clearPasswords"
        android:title="@string/clear_passwords_action" />


    <Preference
        android:key="about"
        android:title="@string/about_action" />

</PreferenceScreen>
